{
  "build": {
    "beforeBuildCommand": "depot build",
    "devPath": "http://localhost:5173",
    "distDir": "../js/packages/bene-app/dist"
  },
  "package": {
    "productName": "Bene",
    "version": "0.0.0"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.nota.bene",
      "targets": "all"
    },
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [{
        "scheme": "bene",
        "domain": "localhost",
        "windows": ["main"]
      }]
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 1200,
        "resizable": true,
        "title": "Bene Reader",
        "width": 1200,
        "url": "bene://localhost:5173"
      }
    ]
  }
}